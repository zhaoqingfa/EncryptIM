<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x_footer_container_height"
    android:padding="@dimen/x_footer_container_padding" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ProgressBar
            android:id="@+id/mpb_footer_progressbar"
            android:layout_width="@dimen/x_footer_progressbar_width"
            android:layout_height="@dimen/x_footer_progressbar_height"
            android:layout_centerInParent="true"
            android:visibility="invisible"
             />

        <TextView
            android:id="@+id/mtv_footer_hint_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/x_footer_load_more"
            android:textColor="@color/x_footer_text_color" />

        <ImageView
            android:id="@+id/miv_footer_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x_footer_arrow_margin"
            android:layout_toLeftOf="@+id/mtv_footer_hint_text"
            android:contentDescription="@null"
            android:src="@drawable/icon_arrow_up"
             />
    </RelativeLayout>

</LinearLayout>